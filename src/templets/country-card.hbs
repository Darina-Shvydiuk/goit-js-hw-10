<div class='card'>
  <div class='card=img'>
    <img src='{{flags.svg}}' alt='{name}' />
  </div>
  <div class='card-body'>
    <h2 class='card-title'>Назва країни:{{name.official}}</h2>
    <p class='card-text'>Столиця:{{capital}}</p>
    <p class='card-text'>Населення:{{population}}</p>
    <p class='card-text'>Мова:{{languages}}</p>
  </div>

</div>