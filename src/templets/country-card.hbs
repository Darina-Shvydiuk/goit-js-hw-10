<img
  class='country-info_img'
  src='{{flags.svg}}'
  alt='{name.official}'
  width='180'
/>

<div class='country-info_inner'>
  <h2 class='country-info_name'>{{name.official}}</h2>
  <p class='country-info_capital'><span
      class='country-info_title'
    >Capital:</span>
    {{capital}}</p>
  <p class='country-info_population'><span
      class='country-info_title'
    >Population:</span>
    {{population}}</p>
  <ul class='country-languages'><span
      class='country-info_title'
    >Languages:</span>
    {{#each languages}}
      {{#if @last}}
        <li class='country-languages-item'>{{this}}</li>
      {{else}}
        <li class='country-languages-item'>{{this}},</li>
      {{/if}}
    {{/each}}
  </ul>
</div>